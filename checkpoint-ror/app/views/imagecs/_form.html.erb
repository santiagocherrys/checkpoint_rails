<%= form_with(model: imagec, class: "contents") do |form| %>
  <% if imagec.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(imagec.errors.count, "error") %> prohibited this imagec from being saved:</h2>

      <ul>
        <% imagec.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <label for="name" class="block text-sm/6 font-medium text-gray-900"><%= t("forms.name") %></label>
    <div class="mt-2">
      <%= form.text_field :name, class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6" %>
    </div>
  </div>

  <div class="my-5">
    <label for="description" class="block text-sm/6 font-medium text-gray-900"><%= t("forms.description") %></label>
    <div class="mt-2">
      <%= form.text_area :description, rows: 4, class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6" %>
    </div>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>

<div class="mt-4">
  <%= link_to "back to index", imagecs_path, class: "flex-1 ml-3 bg-blue-500 py-2 px-5 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
</div>
